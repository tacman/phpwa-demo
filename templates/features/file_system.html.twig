{% extends 'base.html.twig' %}

{% block title %}File system{% endblock %}

{% block body %}
<turbo-frame id="content">
    <section
        class="bg-white dark:bg-gray-900"
        data-controller="pwa--file-system"
    >
        <div class="py-8 px-4 mx-auto max-w-screen-xl sm:py-16 lg:px-6 ">
            <h2 class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white">
                File system
            </h2>
            <p class="mb-3 font-light text-gray-500 dark:text-gray-400 sm:text-xl">
                The File System API allows you to read and write files on the userâ€™s device.
            </p>
            <button
                {{ stimulus_action('pwa--file-system', 'pickFile', 'click') }}
                class="focus:outline-none text-white bg-purple-700 hover:bg-purple-800 focus:ring-4 focus:ring-purple-300 font-medium rounded-lg text-sm px-5 py-2.5 mb-2 dark:bg-purple-600 dark:hover:bg-purple-700 dark:focus:ring-purple-900"
            >
                Select files
            </button>
            <button
                {{ stimulus_action('pwa--file-system', 'pickDirectory', 'click') }}
                class="focus:outline-none text-white bg-purple-700 hover:bg-purple-800 focus:ring-4 focus:ring-purple-300 font-medium rounded-lg text-sm px-5 py-2.5 mb-2 dark:bg-purple-600 dark:hover:bg-purple-700 dark:focus:ring-purple-900"
            >
                Select a directory
            </button>
            <button
                {{ stimulus_action('pwa--file-system', 'saveFile', 'click') }}
                class="focus:outline-none text-white bg-purple-700 hover:bg-purple-800 focus:ring-4 focus:ring-purple-300 font-medium rounded-lg text-sm px-5 py-2.5 mb-2 dark:bg-purple-600 dark:hover:bg-purple-700 dark:focus:ring-purple-900"
            >
                Save file
            </button>
        </div>
    </section>
</turbo-frame>
{% endblock %}
