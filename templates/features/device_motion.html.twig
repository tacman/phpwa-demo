{% extends 'base.html.twig' %}

{% block title %}Device motion{% endblock %}

{% block body %}
<turbo-frame id="content">
    <section class="bg-white dark:bg-gray-900">
        <div class="py-8 px-4 mx-auto max-w-screen-xl sm:py-16 lg:px-6 ">
            <h2 class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white">
                Device motion
            </h2>
            <p class="mb-3 font-light text-gray-500 dark:text-gray-400 sm:text-xl">
                The Device Motion Event gives information about the speed of changes for the position and orientation of the user's device.
            </p>
            <twig:DeviceMotion />
        </div>
    </section>
</turbo-frame>
{% endblock %}
