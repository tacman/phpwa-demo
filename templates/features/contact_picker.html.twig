{% extends 'base.html.twig' %}

{% block title %}Contact picker{% endblock %}

{% block body %}
    <turbo-frame id="content">
        <section
            data-controller="contact pwa--contact"
            data-action="pwa--contact:selection->contact#show pwa--contact:unavailable->contact#unavailable"
            class="bg-white dark:bg-gray-900"
        >
            <div class="py-8 px-4 mx-auto max-w-screen-xl sm:py-16 lg:px-6 ">
                <h2 class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white">
                    Contact picker
                </h2>
                <div data-contact-target="unavailable" class="p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400 hidden" role="alert">
                    <span class="font-medium">Not supported!</span> The contact picker is not supported on this platform.
                </div>
                <p class="mb-3 font-light text-gray-500 dark:text-gray-400 sm:text-xl">
                    The Contact Picker API allows you to select a contact from the userâ€™s device.<br>
                    Please click on the button below to select one or more contacts.
                </p>
                <button
                    {{ stimulus_action('pwa--contact', 'select', 'click') }}
                    class="focus:outline-none text-white bg-purple-700 hover:bg-purple-800 focus:ring-4 focus:ring-purple-300 font-medium rounded-lg text-sm px-5 py-2.5 mb-2 dark:bg-purple-600 dark:hover:bg-purple-700 dark:focus:ring-purple-900"
                >
                    Select a contact
                </button>
                <div class="p-6 bg-gray-50">
                    <div data-contact-target="list" class="max-w-4xl mx-auto space-y-4 hidden">
                    </div>
                </div>
        </section>
    </turbo-frame>
{% endblock %}
