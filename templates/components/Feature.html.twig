<div {{  attributes }} class="rounded-lg border border-gray-200 bg-white p-6 shadow-sm dark:border-gray-700 dark:bg-gray-800 bg-gray-50 hover:bg-gray-100">
    <div class="h-56 w-full">
        <a href="{{ link }}">
            {% block content %}{% endblock %}
        </a>
    </div>
    <div class="pt-6">
        <a href="{{ link }}" class="text-lg font-semibold leading-tight text-gray-900 hover:underline dark:text-white">
            {{ title }}
        </a>
        <div class="mt-2 flex items-center gap-2">
            <p class="text-sm font-medium text-gray-900 dark:text-white">
                {{ description }}
            </p>
        </div>
    </div>
</div>
